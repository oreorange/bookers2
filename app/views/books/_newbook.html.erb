 <h2>New book</h2>
  <%= form_with model: book, local:true do |f| %>
  <div>
    <%= f.label :Title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :Opinion%>
    <%= f.text_area :body %>
  </div>
  <div>
  <%= f.submit 'Create Book', class:"btn btn-success" %>
  <% end %>
  </div>