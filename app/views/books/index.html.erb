  <% end %>
  
    <table>
      <thead>
      <tr>
        <th>Title</th><th>Opinion</th>
      </tr>
      </thead>
      <% @books.each do |book| %>
      <tbody>
      <tr>
        <td>
          <%= link_to user_path(book.user) do %>
          <%= attachment_image_tag book.user, :profile_image, format:'jpeg', fallback: "no_image.jpg", size: "50x50" %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(book.id) do %>
           <%= book.title %>
        </td>
          <% end %>
        <td><%= book.body %></td>
      </tr>
      </tbody>
      <% end %>
