  <main>
    
  <h2>New book</h2>
  <%= form_with model: @book, local:true do |f| %>
  <div>
    <%= f.label :Title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :Opinion%>
    <%= f.text_area :body %>
  </div>
  <div>
  <%= f.submit 'Create Book' %>
  </div>
  <% end %>
  
    <table>
      <thead>
      <tr>
        <th>Title</th><th>Opinion</th>
      </tr>
      </thead>
      <% @books.each do |book| %>
      <tbody>
      <tr>
        <td><%= book.title %></td><td><%= book.body %></td>
      </tr>
      </tbody>
    </table>
  <% end %>
  
  </main>
  