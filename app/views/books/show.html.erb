     <tbody>
      <tr><%= attachment_image_tag @user, :profile_image, format:'jpeg', fallback: "no_image.jpg", size: "100x100" %></tr>
      <tr>
        <td>name</td>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= @user.introduction %></td>
      </tr>
     </tbody>
    </table>
    
  <p><%= link_to "プロフ編集", edit_user_path(@user) %></p>
　
　<h2>New book</h2>
  <%= form_with model: @booknew, local:true do |f| %>
  <div>
    <%= f.label :Title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :Opinion%>
    <%= f.text_area :body %>
  </div>
  <div>
  <%= f.submit 'Create Book' %>
  </div>
  <% end %>
  
    <div>
      <h2>Book detail</h2>
    <table>
      <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="2"></th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <td>
          <%= attachment_image_tag @book.user, :profile_image, format:'jpeg', fallback: "no_image.jpg", size: "50x50" %>
        </td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <% if @book.user == current_user %>
        <td><%= link_to "Edit", edit_book_path %></td>
        <td><%= link_to "Destroy", book_path(@book),method: :delete, "data-confirm" => "本当に消しますか?" %> %></td>
        <% end %>
      </tr>
      </tbody>
    </table>
    </div>