  <h2>New book</h2>
  <%= form_with model: @book, local:true do |f| %>
  <div>
    <%= f.label :Title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :Opinion%>
    <%= f.text_area :body %>
  </div>
  <div>
  <%= f.submit 'Create Book' %>
  </div>
  <% end %>

    <table>
      <thead>
      <tr>
        <th>image</th><th>name</th>
      </tr>
      </thead>
      <% @users.each do |user| %>
      <tbody>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, format:'jpeg', fallback: "no_image.jpg", size: "100x100" %></td>
        <td><%= user.name %></td>
        <td>
          <%= link_to "Show", user_path(user.id) %>
        </td>
      </tr>
      </tbody>
    </table>
  <% end %>